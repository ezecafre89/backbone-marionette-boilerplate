<div class="page-header">
  <h3 class="title">What do you have to do this week? </h3>
</div>

<div class="panel panel-default clear-fix">
  <form role="form-inline">

    <div class="form-group col-sm-4">
      <label>Task Name</label>
      <input type="text"
        class="form-control js-name"
        name="task-name"
        placeholder="Enter the task name"
        required="true">
    </div>

    <div class="form-group col-sm-4">
      <label>Description</label>
      <input
        type="text"
        class="form-control js-desc"
        id="dueDate"
        name="desc"
        placeholder="Enter the description"
        required="true">
    </div>

    <div class="form-group col-sm-4">
      <label>Due Date</label>
      <input type="date"
        class="form-control js-dueDate col-sm-10"
        id="inputDueDate"
        name="dueDate"
        placeholder="Enter the due date"
        required="true">
    </div>

    <div class="form-group col-md-12 add-botton">
      <div class="form-group pull-right">
        <button type="submit" class="js-addTask btn btn-main">Add Task</button>
      </div>
    </div>

  </form>

</div>

